{
  "name": "modern-news-aggregator",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "format": "prettier --write . && eslint . --fix",
    "preview": "vite preview",
    "prepare": "husky",
    "docker:build": "docker build -t modern-news-aggregator .",
    "docker:run": "docker run -p 3000:80 modern-news-aggregator",
    "docker:dev": "docker-compose --profile dev up --build",
    "docker:prod": "docker-compose up --build",
    "docker:stop": "docker-compose down",
    "docker:clean": "docker-compose down --rmi all --volumes --remove-orphans"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.0.1",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "lucide-react": "^0.344.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-redux": "^9.1.0",
    "react-tooltip": "^5.28.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vitejs/plugin-react": "^5.0.4",
    "babel-plugin-react-compiler": "^0.0.0-experimental-f995dd7-20251016",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "sass": "^1.70.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.1.10"
  }
}
